{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "es5",
      "outDir": "./dist",
      "lib": [ "es2015", "es2016", "es2017" ],
      "moduleResolution": "node",
      "allowJs": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/*.spec.js"
    ]
}
